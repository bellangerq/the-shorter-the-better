.card

  = image_tag "logo.png", class: "logo"

  %h1
    The shorter
    %span the bettr.

  %form{:method => 'post', :novalidate => "true"}
    %input{:type => "url", :class => 'input', :id => 'shorturl', :placeholder => 'Paste your URL...'}
    %input{:type => "submit", :class => 'button', :value => 'Shorter it!', :data => {:clipboard => {:target => '#shorturl'}}, :onclick => "return false"}
    %input{:class => 'shortened-link'}

  %ul.copyright
    %li
      Made by
      = link_to 'Quentin', 'http://quentin-bellanger.fr', :target => '_blank'
    %li= link_to 'Contact', 'mailto:hello@quentin-bellanger.fr'
    %li= link_to 'Share', share_link, :target => '_blank'
