.shorteners-index
  %table
    %thead
      %tr
        %th= t('views.shortener.index.given_url')
        %th= t('views.shortener.index.short_url')
        %th= t('views.shortener.index.count')
    %tbody
    - @shorteners.each do |s|
      %tr
        %td= link_to s.given_url, shortener_path(s)
        %td= link_to s_url(s.slug), s_url(s.slug)
        %td= s.count

= will_paginate @shorteners
